<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nishant.sum_1.SelectTables">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Range"
        android:id="@+id/textView"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="From"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView6"
            android:layout_row="4"
            android:layout_column="1"
            android:text="       " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:id="@+id/textView3"
            android:layout_row="5"
            android:layout_column="0" />

        <Spinner
            android:entries="@array/thirty"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:id="@+id/spinner_from1"
            android:layout_row="1"
            android:layout_column="2"
            android:spinnerMode="dropdown"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="X"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="3"
            android:width="80dp"
            android:gravity="center" />

        <Spinner
            android:entries="@array/thirty"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:id="@+id/spinner_to1"
            android:layout_row="7"
            android:layout_column="2"
            android:spinnerMode="dropdown"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="X"
            android:id="@+id/textView5"
            android:layout_row="7"
            android:layout_column="3"
            android:width="80dp"
            android:gravity="center" />

        <Spinner
            android:entries="@array/thirty"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:id="@+id/spinner_from2"
            android:layout_row="1"
            android:layout_column="4"
            android:spinnerMode="dropdown"
            android:gravity="center" />

        <Spinner
            android:entries="@array/thirty"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:id="@+id/spinner_to2"
            android:layout_row="7"
            android:layout_column="4"
            android:spinnerMode="dropdown"
            android:gravity="center" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/button_go"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:onClick="onSelectButttonClick"/>

</RelativeLayout>
